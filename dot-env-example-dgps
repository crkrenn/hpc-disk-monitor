# DISK_STATS_DB=/p/lustre1/{{whoami}}/hpc-disk-monitor/data/disk_stats.db  # Legacy support

# Data collection frequency (minutes)
DISK_SAMPLING_MINUTES=5
API_SAMPLING_MINUTES=5

# Dashboard refresh rate (seconds)
DASH_REFRESH_SECONDS=5
